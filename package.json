{
  "name": "jimple",
  "version": "2.0.0",
  "description": "jimple - a JS dependency injection container/service locator",
  "main": "src/index.js",
  "author": "Julien Bianchi <contact@jubianchi.fr>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/jubianchi/laboard.git"
  },
  "engines" : {
    "node" : "^4.0"
  },
  "devDependencies": {
    "atoum.js": "~0.0.11",
    "jscs": "^1.7.3"
  },
  "scripts": {
    "test": "node_modules/atoum.js/bin/atoum -d tests",
    "cover": "node_modules/atoum.js/bin/atoum --coverage --coverage-dir src -d tests",
    "cs": "node_modules/.bin/jscs src",

    "dtest": "docker run --rm -it -v $(pwd):/app -w /app jubianchi/docker-node-4 /app/node_modules/atoum.js/bin/atoum -d /app/tests",
    "dcover": "docker run --rm -it -v $(pwd):/app -w /app jubianchi/docker-node-4 /app/node_modules/atoum.js/bin/atoum --coverage --coverage-dir /app/src -d /app/tests",
    "dcs": "docker run --rm -it -v $(pwd):/app -w /app jubianchi/docker-node-4 /app/node_modules/.bin/jscs /app/src"
  }
}
